package elements;

public abstract class Object 
{
	protected int xPos, yPos;
	
	/**
	 * creates a new object
	 * @param x position
	 * @param y position
	 */
	protected Object(int x, int y)
	{
		xPos = x;
		yPos = y;
	}
	
	/**
	 * gets x coordinate
	 * @return x coordinate
	 */
	public int getX()
	{
		return xPos;
	}
	
	/**
	 * gets y coordinate
	 * @return y coordinate
	 */
	public int getY()
	{
		return yPos;
	}
	
	/**
	 * set the position of the object
	 * use in game setup/initialization
	 * @param x position
	 * @param y position
	 */
	public void setPosition(int x, int y)
	{
		xPos = x;
		yPos = y;
	}
}
