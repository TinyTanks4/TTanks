package elements;

import java.awt.Image;

import javax.swing.ImageIcon;

public class Tank extends Object
{
	/**
	 * creates a new Tank at position (x,y)
	 * @param x
	 * @param y
	 */
	protected Tank(int x, int y, String picture)
	{
		super(x, y);
		ImageIcon tankIcon = new ImageIcon("C://" + picture); //"TankPics/userTank/UserTank.png"
		Image tankImage = tankIcon.getImage();
		Image smallTankImage = tankImage.getScaledInstance(150, 150, Image.SCALE_SMOOTH);
		tankIcon = new ImageIcon(smallTankImage);
	}
	
	public void moveTo()
	{
		
	}
}
